</ul>

<!-- SECONDARY FUNCTION STRUCTURE END HERE -->


<!-- Search Template -->
<div class="container landing-page">
    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <h1 class="center white-text">Get Grub</h1>
            <div class="row center">
            </div>
        </div>
    </div>
    <br>

    <div id="default-search-input" class="input-field col s12">
        <a href="#!" id="search-icon" class="material-icons white-text prefix">search</a>
        <input type="text" id="search-query" class="autocomplete white-text"/>
        <label class="white-text" for="search-query">Search</label>
    </div>
    <br>
    <!-- Cuisine Form -->

    <div style="display: none;" id="cuisine-dropdown" class="input-field col s12">
        <select class="cuisine" multiple>
            <option value="1">African</option>
            <option value="2">British</option>
            <option value="3">Caribbean</option>
            <option value="4">Chinese</option>
            <option value="5">Cajun</option>
            <option value="6">French</option>
            <option value="7">European</option>
            <option value="8">Greek</option>
            <option value="9">Italian</option>
            <option value="10">Japanese</option>
            <option value="11">Jewish</option>
            <option value="12">Korean</option>
            <option value="13">Mexican</option>
            <option value="14">Mediterranean</option>
            <option value="15">Middle Eastern</option>
            <option value="16">Indian</option>
            <option value="17">Thai</option>
            <option value="18">Spanish</option>
            <option value="19">Latin American</option>
            <option value="20">American</option>
        </select>
        <label class="white-text">Cuisine</label>
    </div>

    <div style="display: none;" id="diet-dropdown" class="input-field col s12">
        <select class="diet" multiple>
            <option value="1">Gluten Free</option>
            <option value="2">Ketogenic</option>
            <option value="3">Vegetarian</option>
            <option value="4">Vegan</option>
            <option value="5">Pescetarian</option>
            <option value="6">Paleo</option>
        </select>
        <label class="white-text">Diet</label>
    </div>

    <!-- Intolerance Form -->
    <div style="display: none;" id="intolerance-dropdown" class="input-field col s12">
        <select class="intolerance" multiple>
            <option value="1">Dairy</option>
            <option value="2">Egg</option>
            <option value="3">Gluten</option>
            <option value="4">Grain</option>
            <option value="5">Peanut</option>
            <option value="6">Seafood</option>
            <option value="7">Sesame</option>
            <option value="8">Shellfish</option>
            <option value="9">Soy</option>
            <option value="10">Sulfite</option>
            <option value="11">Tree Nut</option>
            <option value="12">Wheat</option>
        </select>
        <label class="white-text">Intolerance</label>
    </div>


    <!-- Select Button -->
    <form action="#" id="query-selection">
        <label>
            <input id="cuisine-btn" name="group1" type="radio" class="with-gap" />
            <span class="query-type default-query white-text">Cuisine</span>
        </label>

        <label>
            <input id="diet-btn" name="group1" type="radio" class="with-gap" />
            <span class="query-type white-text">Diet</span>
        </label>
    </form>    
</div>

  <div class="loading display-none"></div>

<ul class="collapsible results">
    {{#each recipes}}
    <li>
        <div class="collapsible-header blue-grey lighten-1 row valign-wrapper" data-id="{{id}}">
            <div class="col s12 m2"><img class="food-img" src="{{imageUrl}}" alt="{{title}}"></div>
            <div class="col s12 m9">
                <h4 class="title">{{title}}</h4>
                <div class="details">
                    {{#if cuisine}}
                    <h6><i class="fas fa-utensils"></i><span class="cuisine">{{cuisine}}</span></h6>
                    {{/if}}
                    {{#if vegetarian}}
                    <h6 class="vegetarian"><i class="fas fa-carrot"></i>Vegetarian</h6>
                    {{/if}}
                    {{#if time}}
                    <h6 ><i class="fas fa-clock"></i></i><span class="time">{{time}}</span> minutes</h6>
                    {{/if}}
                </div>
            </div>
            <div class="col s12 m1 save-box"> 
                {{#if userId}}              
                <i class="fas fa-heart saved"></i>
                Already Saved
                {{/if}}
                {{#unless userId}}   
                <i class="far fa-heart unsaved"></i>
                Save recipe to dashboard  
                {{/unless}}             
            </div>           
        </div>
        <div class="collapsible-body grey blue-grey lighten-5">
      <div class="row summary-row">
        <span class="summary">{{summary}}</span>
      </div>  
      
    </li>
    {{/each}}
</ul>