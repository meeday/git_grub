<!-- Side Nav Structure -->
<ul id="slide-out" class="sidenav">
    <li>
        <div class="user-view">
            <div class="background">
                <img src="../public/images/light-background.jpg">
            </div>
            <!-- User Detail after login -->
            <!-- CAUTION!!! PLACE HOLDER CONTAINED!!!! -->
            <a href="#user"><img class="circle" id="user-icon" src="{{avatar}}"></a>
            <a href="#name"><span class="white-text name" id="user-name" data-id="{{googleId}}">{{displayName}}</span></a>
        </div>
    </li>
    <li><a class="subheader">GET RECIPE~</a></li>
    <li><a href="#!"><i class="material-icons">search</i>Search Recipe</a></li>
